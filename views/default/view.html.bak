<style>
.fit {
  max-width: 99%;
  max-height: 80%; <!--leaves room at bottom for module things-->
}
.marker {
   max-width: 20%;
   max-height: 20%; <!--leaves room at bottom for module things-->
}
.block {
        position: absolute;
        z-index: 200;
        height: 10px;
        width: 10px;
        border-radius: 5px;
}
.endGame{
    position: absolute;
    left:50%;
    margin-left:-150px;
    border:solid black 2px;
    z-index:300;
   }
.endGameTitle{
    background:yellow;
    text-align:center;
}
.reportTable{
    border: solid black 2px;
    border-collapse:collapse;
    table-layout: fixed;
}
.tableSiteName{
    background:yellow;
    text-align:center;
    width: 100px;
    overflow: hidden;
    border:solid black 2px;
}
.tableEffortTotal{
    background:pink;
    text-align:center;
    width: 100px;
    overflow: hidden;
    border:solid black 2px;
}
.tableBudgetTitle{
    background:magenta;
    text-align:center;
    width: 100px;
    overflow: hidden;
    border:solid black 2px;
}
.tableRevenueTitle{
    background:green;
    text-align:center;
    width: 100px;
    overflow: hidden;
    border:solid black 2px;
}
.tableModule{
    background:white;
    width: 100px;
    max-width: 100px;
    overflow: hidden;
    border:solid black 2px;
}
}
</style>
<h1>{{=title}}</h1>

<table width="60%" border="0" cellspacing="1" cellpadding="1"; >
    <tr>        
        <td>
            <FORM METHOD="LINK" ACTION="view">
            <INPUT TYPE="submit" VALUE="Click to Continue to next day">
            </FORM>
        </td>
        <td>
            <FORM METHOD="LINK" ACTION="index">
            <INPUT TYPE="submit" VALUE="Home">
            </FORM>
        </td>
    </tr>
</table>

<h1>
    Day: {{=day}}
</h1>

{{for team in modules: }}
<h3>
{{=team[0].upper()}} (Team Size: {{=team[2]}})
</h3>

<table width="50%">
    <tr>
        <td>
                <strong>Name</strong>
        </td>
        <td>
                <strong>Task Done</strong>
        </td>
        <td>
                <strong>Task Estimated</strong>
        </td>
        <td>
                <strong>Current Stage</strong>
        </td>
        <td>
            <strong> Days Left</strong>
        </td>

    </tr>
{{for i in team[1]:}}
{{j = str(i).split(',')}}
    <tr>
        <td>
                {{=j[0]}}
        </td>
        <td>
                {{=j[1]}}
        </td>
        <td>
                {{=j[2]}}
        </td>
        <td>
                {{=j[3]}}
        </td>
        <td>
                {{=j[4]}}
        </td>

    </tr> 
</h4>
{{pass}}
</table>{{pass}}


